@model StoreMVC.Models.CustomerIndexVM

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<!DOCTYPE html>
<p>Looking to see if you're already in the system? Search your name and find out!</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="customerName" class="control-label"></label>
                <input asp-for="customerName" class="form-control" />
                <span asp-validation-for="customerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
        <div>
            @*<a asp-action="../Home/Index">Back to Main Menu</a>*@
            <button type="button" onclick="location.href='@Url.Action("Index", "Home")'" />Back to Main Menu
        </div>
    </div>
</div>
